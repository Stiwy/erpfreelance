{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    {% include 'customer/_header.html.twig' %}

    <div class="flex h-full">
        <section class="bg-white m-5 p-3 w-4/5 h-full relative">
            <div class="absolute inset-y-1/4 w-full text-center">
            <i class="fa-solid fa-address-book text-gray-100" style="font-size: 250px"></i>
            </div>
            <div class="z-10">
                <div class="w-full m-auto p-2 bg-green-200 rounded-xl text-green-800 font-bold text-lg pl-5">
                    <i class="fa-solid fa-check text-white text-3xl mr-5"></i> Pas de projet en cours
                </div>

                <div>
                    <div class="px-4 mt-5 flex justify-between">
                        <div>
                            <h1 class="text-3xl font-bold">{{ customer.name }}</h1>
                            <p class="text-gray-500 text-lg font-bold"><i class="fa-solid fa-building text-gray-500"></i> {{ customer.company }}</p>
                            <br>
                            <div class="text-lg text-gray-500">
                                <p><i class="fa-solid fa-mobile-phone text-gray-500"></i> {{ phoneFormat(customer.phone) }}</p>
                                <p><i class="fa-solid fa-phone text-gray-500"></i> {{ phoneFormat(customer.phone2) }}</p>
                                <p><i class="fa-solid fa-envelope text-gray-500"></i> {{ customer.email }}</p>
                                <p><i class="fa-solid fa-map-location-dot text-gray-500"></i> {{ customer.address }}, {{ customer.zipCode }} {{ customer.city }}</p>
                            </div>
                        </div>

                        <div>
                            <span class="px-4 bg-green-400 rounded-xl text-lg py-1 text-white">Pas de projet</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-white m-5 p-5 w-1/5 h-full">
            <div>
                <p class="text-xl text-gray-300 font-bold text-center">Navigation</p>

                <a class="block bg-gray-800 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="{{ path('customer_index') }}">Retour</a>
                <br>
                <a class="block bg-gray-800 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Devis</a>
                <a class="block bg-gray-800 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Projet(s)</a>
                <a class="block bg-gray-800 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Facture(s)</a>
            </div>
            <br>
            <div>
                <p class="text-xl text-gray-300 font-bold text-center">Accès</p>

                {% if customer.userUser %}
                    <a class="block bg-purple-600 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Vue client</a>
                    <a class="block bg-yellow-400 text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Réinitialiser</a>
                    <a class="block bg-red-600 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Supprimer</a>
                {% else %}
                    <a class="block bg-green-400 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Ajouter</a>
                {% endif %}
            </div>
            <br>
            <div>
                <p class="text-xl text-gray-300 font-bold text-center">Gestion</p>

                <a class="block bg-gray-800 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Relance client</a>
                <a class="block bg-yellow-400 text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="{{ path('customer_edit', {'id': customer.id}) }}">Editer</a>
                <a class="block bg-black text-white text-center my-3 rounded-md shadow-md py-2 w-fit" href="">Blacklister</a>
                {% include 'customer/_delete_form.html.twig' %}
            </div>
        </section>
    </div>
{% endblock %}
