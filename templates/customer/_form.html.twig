{{ form_start(form, {'attr':{'class': 'w-10/12 mb-20'}}) }}
    <div class="mt-10">
        <label for="customer_admin_panel" class="flex items-center cursor-pointer relative mb-4">
            {{ form_widget(form.admin_panel) }}
            <div class="toggle-bg bg-gray-200 border-2 border-gray-200 h-5 w-9 rounded-full"></div>
            <span class="ml-5 form-label">Créer un accès de suivie de projet</span>
        </label>
    </div>

    <div class="flex justify-between">
        <div class="form-group w-5/12">
            {{ form_label(form.name) }}<span class="text-red-500 text-xl"> *</span>
            {{ form_widget(form.name) }}
        </div>
        <div class="form-group w-5/12">
            {{ form_label(form.company) }}
            {{ form_widget(form.company) }}
        </div>
    </div>

    <div class="flex justify-between">
        <div class="form-group w-5/12">
            {{ form_label(form.phone) }}<span class="text-red-500 text-xl"> *</span>
            {{ form_widget(form.phone) }}
        </div>
        <div class="form-group w-5/12">
            {{ form_label(form.phone2) }}
            {{ form_widget(form.phone2) }}
        </div>
    </div>

    <div class="form-group w-8/12">
        {{ form_label(form.email) }}<span class="text-red-500 text-xl"> *</span>
        {{ form_widget(form.email) }}
    </div>

    <div class="form-group w-8/12 pt-10">
        {{ form_label(form.address) }}<span class="text-red-500 text-xl"> *</span>
        {{ form_widget(form.address) }}
    </div>

    <div class="flex justify-between">
        <div class="form-group w-5/12">
            {{ form_label(form.zip_code) }}<span class="text-red-500 text-xl"> *</span>
            {{ form_widget(form.zip_code) }}
        </div>
        <div class="form-group w-5/12">
            {{ form_label(form.city) }}<span class="text-red-500 text-xl"> *</span>
            {{ form_widget(form.city) }}
        </div>
    </div>

    <div class="form-group w-5/12">
        {{ form_label(form.country) }}<span class="text-red-500 text-xl"> *</span>
        {{ form_widget(form.country) }}
    </div>

    {{ form_widget(form.submit) }}
{{ form_end(form) }}
